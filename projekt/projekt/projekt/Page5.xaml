<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projekt.Page5"
             Title="AKTIVNOST" IconImageSource="c.png">
    <AbsoluteLayout>
        <Label AbsoluteLayout.LayoutBounds="0.5,0.05,200,200"
               AbsoluteLayout.LayoutFlags="XProportional,YProportional"
               HorizontalTextAlignment="Center"
               FontSize="Title"
               TextColor="DeepSkyBlue"
               Text="AKTIVNOST">
        </Label>
        <StackLayout  AbsoluteLayout.LayoutBounds="0.5,0.2,200,200"
                      AbsoluteLayout.LayoutFlags="XProportional,YProportional">
            <DatePicker TextColor="DeepSkyBlue"></DatePicker>
            <TimePicker TextColor="DeepSkyBlue"></TimePicker>
            <Picker TitleColor="DeepSkyBlue" TextColor="DeepSkyBlue" x:Name="pick" Title="Vježba"></Picker>
            <Label FontSize="Small"
               Text="Umoran?"
               TextColor="DeepSkyBlue"
               HorizontalTextAlignment="End"></Label>
            <Switch x:Name="sklopka"></Switch>
        </StackLayout>
        <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.85,200,200"
                     AbsoluteLayout.LayoutFlags="XProportional,YProportional">
            <Button Text="ZABILJEŽI" BackgroundColor="DeepSkyBlue"></Button>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>