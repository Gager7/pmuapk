               AbsoluteLayout.LayoutFlags="XProportional,YProportional"
               HorizontalTextAlignment="Center"
               FontSize="Title"
               TextColor="DeepSkyBlue"
               Text="HOME">
        </Label>
        <Image AbsoluteLayout.LayoutBounds="0.5,0.125,300,300"
               AbsoluteLayout.LayoutFlags="XProportional,YProportional"
               x:Name="slika1"></Image>
